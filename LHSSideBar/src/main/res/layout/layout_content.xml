<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="wrap_content"
      >
   <LinearLayout
        android:layout_centerHorizontal="true"
       android:id="@+id/ll_hide_bar"
       android:layout_width="150dp"
       android:layout_height="10dp"
       android:background="@drawable/selector_button"
       android:orientation="horizontal" />
    <LinearLayout

        android:layout_centerInParent="true"
        android:id="@+id/root"
        android:visibility="gone"
        style="@style/RootLayoutStyle">

        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_back"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_back_"
                android:text="@string/back" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_home_"
                android:text="@string/home" />
        </LinearLayout>



        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_upward"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_upward"
                android:text="@string/upward" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_down"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_down"
                android:text="@string/down" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_left"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_left"
                android:text="@string/left" />
        </LinearLayout>
        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_right"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_right"
                android:text="@string/right" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_volume"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_volume_"
                android:text="@string/volume" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatCheckedTextView
                android:id="@+id/tv_long_click"
                android:checked="false"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_long_click"
                android:textAlignment="center"
                android:text="@string/long_click" />
        </LinearLayout>
        <LinearLayout style="@style/LayoutStyle">

            <androidx.appcompat.widget.AppCompatCheckedTextView
                android:id="@+id/tv_lock"
                android:checked="false"
                style="@style/ButtonStyle"
                android:drawableTop="@drawable/ic_lock_open_"
                 android:textAlignment="center"
                android:text="@string/lock" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>